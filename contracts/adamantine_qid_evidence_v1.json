{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "adamantine_qid_evidence_v1",
  "title": "Adamantine Q-ID Evidence v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["v", "kind", "login_uri", "response_payload", "signature"],
  "properties": {
    "v": {
      "type": "string",
      "const": "1"
    },
    "kind": {
      "type": "string",
      "const": "qid_login_v1"
    },
    "login_uri": {
      "type": "string",
      "minLength": 1
    },
    "response_payload": {
      "type": "object"
    },
    "signature": {
      "type": "string",
      "minLength": 1
    },
    "hybrid_container_b64": {
      "type": "string",
      "minLength": 1
    }
  }
}
