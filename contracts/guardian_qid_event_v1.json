{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "guardian_qid_event_v1",
  "title": "Guardian Q-ID Login Event v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["v", "kind", "service_id", "callback_url", "nonce", "address", "pubkey"],
  "properties": {
    "v": { "type": "string", "const": "1" },
    "kind": { "type": "string", "const": "qid_login_event_v1" },
    "service_id": { "type": "string", "minLength": 1 },
    "callback_url": { "type": "string", "minLength": 1 },
    "nonce": { "type": "string", "minLength": 1 },
    "address": { "type": "string", "minLength": 1 },
    "pubkey": { "type": "string", "minLength": 1 },
    "key_id": { "type": "string", "minLength": 1 },
    "login_uri": { "type": "string", "minLength": 1 },
    "qid_signature": { "type": "string", "minLength": 1 }
  }
}
